{
  "name": "sentry-issues",
  "displayName": "Sentry Issues",
  "description": "Viewing sentry issues inside VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "menus": {
      "view/title": [
          {
              "command": "testView.refreshEntry",
              "when": "view == testView",
              "group": "navigation"
          }
      ],
      "view/item/context": [
        {
          "command": "testView.ignoreIssue",
          "group": "inline",
          "when": "view == testView && viewItem =~ /issueItem/"
        },
        {
          "command": "testView.resolveIssue",
          "group": "inline",
          "when": "view == testView && viewItem =~ /issueItem/"
        }
      ]
  },
    "views": {
			"explorer": [
				{
					"id": "testView",
					"name": "Issues"
				}
			]
		},
    "commands": [
      {
        "command": "testView.refreshEntry",
        "title": "Refresh",
        "category": "Sentry Issues",
        "icon": {
            "light": "resources/light/refresh.svg",
            "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "testView.ignoreIssue",
        "title": "Ignore",
        "category": "Sentry Issues",
        "icon": {
            "light": "resources/light/boolean.svg",
            "dark": "resources/dark/boolean.svg"
        }
      },
      {
        "command": "testView.resolveIssue",
        "title": "Resolve",
        "category": "Sentry Issues",
        "icon": {
            "light": "resources/light/edit.svg",
            "dark": "resources/dark/edit.svg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  }
}
