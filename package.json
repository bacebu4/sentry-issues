{
  "name": "sentry-issues",
  "displayName": "Sentry Issues",
  "description": "Viewing sentry issues inside VSCode",
  "publisher": "bacebu4",
  "version": "1.3.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "keywords": [
    "sentry",
    "issues",
    "glitch tip"
  ],
  "icon": "img/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/bacebu4/sentry-issues"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "issueView",
        "contents": "No provided credentials for Sentry.\n[Login](command:sentryIssues.login)",
        "when": "sentryIssues.noCredentials"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "issueView.refreshEntry",
          "when": "view == issueView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "issueView.ignoreIssue",
          "group": "inline",
          "when": "view == issueView && viewItem =~ /issueItem/"
        },
        {
          "command": "issueView.resolveIssue",
          "group": "inline",
          "when": "view == issueView && viewItem =~ /issueItem/"
        },
        {
          "command": "issueView.openInBrowser",
          "when": "view == issueView && viewItem =~ /issueItem/"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "issueView",
          "name": "Issues"
        }
      ]
    },
    "commands": [
      {
        "command": "sentryIssues.logout",
        "title": "Logout",
        "category": "Sentry Issues"
      },
      {
        "command": "issueView.refreshEntry",
        "title": "Refresh",
        "category": "Sentry Issues",
        "icon": "$(refresh)"
      },
      {
        "command": "issueView.ignoreIssue",
        "title": "Ignore",
        "category": "Sentry Issues",
        "icon": "$(discard)"
      },
      {
        "command": "issueView.resolveIssue",
        "title": "Resolve",
        "category": "Sentry Issues",
        "icon": "$(check)"
      },
      {
        "title": "Open In Browser",
        "command": "issueView.openInBrowser",
        "category": "Sentry Issues"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "glob": "^8.1.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "undici": "^5.22.1",
    "zod": "^3.21.4"
  }
}
